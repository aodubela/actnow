<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/ivDetailStoryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_holder" />

        <TextView
            android:id="@+id/detailStoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ivDetailStoryImage"
            android:layout_margin="16dp"
            android:text="Title fashion axe freegan direct trade Neutra kitsch Ennui."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/llStoryAuthorDateContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailStoryTitle"
            android:layout_below="@+id/detailStoryTitle">

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source Name"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvStoryFirstRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:hint="|"
                android:padding="2dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 6, 2014"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llStoryAuthorDateContainer"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tvDetailStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ProgressBar
                android:id="@+id/pbLoadStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:indeterminate="true"
                android:layout_gravity="center" />

        </FrameLayout>

    </RelativeLayout>

</ScrollView>