<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/ivDetailStoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_size_holder"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_holder" />

        <TextView
            android:id="@+id/detailStoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ivDetailStoryImage"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="@dimen/default_view_margin"
            android:text="Title fashion axe freegan direct trade Neutra kitsch Ennui."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source Name"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/detailStoryTitle"
            android:layout_alignLeft="@+id/detailStoryTitle"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnSignPetitionDetail"
            style="@style/redButtonSolid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSource"
            android:text="Sign Petition" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnSignPetitionDetail"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tvDetailStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ProgressBar
                android:id="@+id/pbLoadStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:indeterminate="true"
                android:layout_gravity="center" />

        </FrameLayout>

    </RelativeLayout>

</ScrollView>