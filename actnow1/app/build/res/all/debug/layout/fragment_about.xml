<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <org.actnow.utils.RobotoFont
        android:id="@+id/tvAboutTitle"
        style="@style/textTitleStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/aboutUsMessage" />

    <LinearLayout
        android:id="@+id/llaboutUs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvAboutTitle">

        <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/contentDescription"
            android:scaleType="centerCrop"
            android:layout_marginRight="8dp"
            android:src="@drawable/about_us_img_1" />

        <org.actnow.utils.RobotoFont
            android:id="@+id/tvSummary1"
            style="@style/textBodyStyle"
            android:text="@string/aboutUsStep1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llaboutUs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_below="@id/llaboutUs1"
        >

    <ImageView
        android:id="@+id/ivImage2"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:src="@drawable/about_us_img_2" />

    <org.actnow.utils.RobotoFont
        android:id="@+id/tvSummary2"
        style="@style/textBodyStyle"
        android:text="@string/aboutUsStep2" />

    </LinearLayout>

    <org.actnow.utils.RobotoFont
        android:id="@+id/tvSwipeLeft"
        style="@style/roboto_slab_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llaboutUs2"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:text="@string/swipeLeft" />


</RelativeLayout><!-- From: file:/Users/aodubela/Documents/project/workspace/actnow1/app/src/main/res/layout/fragment_about.xml -->