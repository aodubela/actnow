<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black"
    android:padding="@dimen/form_margin">

    <org.actnow.utils.RobotoFont
        android:id="@+id/tvPetitionSigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textColor="@color/app_white"
        style="@style/roboto_slab_regular"
        android:textSize="20sp"
        android:text="@string/petition_signed"/>

    <org.actnow.utils.RobotoFont
        android:id="@+id/tvThankYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tvPetitionSigned"
        android:textColor="@color/app_red"
        style="@style/roboto_slab_regular"
        android:textSize="22sp"
        android:text="@string/petition_signed_thanku"/>

    <View
        android:id="@+id/ivLineBreak1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvThankYou"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="24dp"
        android:background="@color/app_red" />

    <View
        android:id="@+id/ivLineBreak2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ivLineBreak1"
        android:layout_marginTop="0.25dp"
        android:background="@color/app_red" />
</RelativeLayout>
